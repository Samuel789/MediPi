<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.medipi.medication.Schedule" table="schedule">
        <id name="scheduleId" type="int">
            <column name="schedule_id" />
            <generator class="increment" />
        </id>
        <property name="assignedStartDate" type="java.util.Date" not-null="true">
            <column name="assigned_start_date" />
        </property>
        <property name="assignedEndDate" type="java.util.Date" not-null="true">
            <column name="assigned_end_date" />
        </property>
        <property name="alternateName" type="java.lang.String" not-null="true">
            <column name="alternate_name" />
        </property>
        <property name="purposeStatement" type="java.lang.String" not-null="true">
            <column name="purpose_statement" />
        </property>
        <many-to-one lazy="false" name="medication" class="org.medipi.medication.Medication" column="medication_id" cascade="all" not-null="true" />
        <property name="patientUuid" type="java.lang.String" not-null="true">
            <column name="patient_uuid" />
        </property>

    </class>
    <query name="Schedule.findByScheduleId">
        <![CDATA[SELECT s FROM Schedule s WHERE s.scheduleId = :id]]>
    </query>
    <query name="Schedule.findAll">
        <![CDATA[SELECT s FROM Schedule s]]>
    </query>

</hibernate-mapping>
