<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.medipi.medication.Schedule" table="schedule">
        <id name="scheduleId" type="int">
            <column name="schedule_id" />
            <generator class="increment" />
        </id>
        <property name="assignedStartDate" type="date" not-null="true">
            <column name="assigned_start_date" />
        </property>
        <property name="assignedEndDate" type="date" not-null="true">
            <column name="assigned_end_date" />
        </property>
        <property name="alternateName" type="java.lang.String" not-null="true">
            <column name="alternate_name" />
        </property>
        <property name="purposeStatement" type="java.lang.String" not-null="true">
            <column name="purpose_statement" />
        </property>
        <many-to-one lazy="false" name="medication" class="org.medipi.medication.Medication" column="medication_id" not-null="true" />
        <property name="patientUuid" type="java.lang.String" not-null="true">
            <column name="patient_uuid" />
        </property>
        <set name="recordedDoses" table="recorded_dose"
             inverse="true" lazy="false">
            <key>
                <column name="schedule_id" not-null="true" />
            </key>
            <one-to-many class="org.medipi.medication.RecordedDose" />
        </set>
        <set name="scheduledDoses" table="scheduled_dose"
             inverse="true" lazy="false" >
            <key>
                <column name="schedule_id" not-null="true" />
            </key>
            <one-to-many class="org.medipi.medication.ScheduledDose" />
        </set>
        <one-to-one name="scheduleAdherence" class="org.medipi.medication.ScheduleAdherence"
                   ></one-to-one>
    </class>

    <query name="Schedule.findByScheduleId">
        <![CDATA[SELECT s FROM Schedule s WHERE s.scheduleId = :id]]>
    </query>
    <query name="Schedule.findByPatientUuid">
        <![CDATA[SELECT s FROM Schedule s WHERE s.patientUuid = :uuid]]>
    </query>
    <query name="Schedule.findByMedicationAndPatient">
        <![CDATA[SELECT s FROM Schedule s WHERE s.patientUuid = :uuid AND s.medication = :medication]]>
    </query>
    <query name="Schedule.findAll">
        <![CDATA[SELECT s FROM Schedule s ORDER BY assignedStartDate]]>
    </query>

</hibernate-mapping>
